                <li><a href="profile.html">Profile</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <!-- Content for the Browse Page -->
        <section id="artwork-gallery">
            <!-- Add artwork thumbnails or any content related to browsing here -->
        </section>
    </main>

    <footer>
